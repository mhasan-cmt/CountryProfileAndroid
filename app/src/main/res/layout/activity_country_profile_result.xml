<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CountryProfileResult"
    android:background="#407C4DFF"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/countryPic"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="fitXY"
            android:src="@drawable/bangladesh_place"
            />
        <TextView
            android:id="@+id/countryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/btnTextBd"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textAlignment="center"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            />
        <TextView
            android:id="@+id/countryDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bangladeshDetails"
            android:textSize="22sp"
            android:padding="10dp"
            />
    </LinearLayout>

</ScrollView>